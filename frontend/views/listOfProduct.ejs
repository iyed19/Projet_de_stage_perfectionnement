<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    <link rel="stylesheet" href="/choice.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-expand-lg sticky-top">
        <div class="container">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#main"
                aria-controls="main" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fa-solid fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="main">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link p-2 p-lg-3" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link p-2 p-lg-3 active" href="/choice">Services</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link p-2 p-lg-3" href="#">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link p-2 p-lg-3" href="#">Contact</a>
                    </li>
                </ul>
                <div class="search ps-3 pe-3 d-none d-lg-block">
                    <i class="fa-solid fa-magnifying-glass"></i>
                </div>
                <a class="btn btn-primary rounded-pill main-btn" href="#">Log Out</a>
            </div>
        </div>
    </nav>
    <div class="container" style="margin-top:50px;">
        <h2 style="text-align: center; color: var(--gold-color);" class="fw-bold">List of Products</h2>
        <div class="form-group mt-3">
            <h2 class="text-light">Products in stock :</h2>
            <ul class="list-group list-group-horizontal-md max-width">
                <li class="list-group-item" style="width: 20%;">Category</li>
                <li class="list-group-item" style="width: 20%;">Brand</li>
                <li class="list-group-item" style="width: 20%;">Model</li>
                <li class="list-group-item" style="width: 20%;">Quantity</li>
                <li class="list-group-item" style="width: 20%;">Buying Date</li>
            </ul>

            <% for(let product of listProducts) { %>
                <ul class="list-group list-group-horizontal-md max-width">
                    <li class="list-group-item" style="width: 20%;"><%= product.category %></li>
                    <li class="list-group-item" style="width: 20%;"><%= product.brand %></li>
                    <li class="list-group-item" style="width: 20%;"><%= product.model %></li>
                    <li class="list-group-item" style="width: 20%;"><%= product.quantity %></li>
                    <li class="list-group-item" style="width: 20%;"><%= product.buyingDate.toDateString().slice(0, 15) %></li>
                </ul>
                <% } %>
            
        </div>
    </div>
</body>
</html>